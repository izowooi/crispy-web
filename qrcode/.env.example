# ===========================================
# Supabase 설정
# ===========================================
# Supabase 프로젝트 URL (Dashboard > Settings > API)
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co

# Supabase anon (public) key - 클라이언트에서 사용
NEXT_PUBLIC_SUPABASE_ANON_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...

# Supabase service role key - 서버에서만 사용 (절대 클라이언트에 노출 금지!)
SUPABASE_SERVICE_ROLE_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...

# ===========================================
# Firebase App Check 설정 (클라이언트)
# ===========================================
# Firebase Console > 프로젝트 설정 > 일반 > 웹 앱
NEXT_PUBLIC_FIREBASE_API_KEY=AIzaSy...
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your-project
NEXT_PUBLIC_FIREBASE_APP_ID=1:123456789:web:abc123

# 개발용 App Check 디버그 토큰 (선택사항)
# Firebase Console > App Check > 앱 > 디버그 토큰 관리
NEXT_PUBLIC_FIREBASE_APP_CHECK_DEBUG_TOKEN=

# ===========================================
# Firebase Admin SDK (서버)
# ===========================================
# Firebase Console > 프로젝트 설정 > 서비스 계정 > 새 비공개 키 생성
FIREBASE_PROJECT_ID=your-project
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxx@your-project.iam.gserviceaccount.com
# JSON에서 private_key 값 복사 (줄바꿈을 \n으로 유지)
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n"

# ===========================================
# Cloudflare Workers 연동
# ===========================================
# Workers URL (배포 후 확인)
CLOUDFLARE_WORKER_URL=https://wifi-qr-r2.your-subdomain.workers.dev

# Workers와 공유하는 비밀키 (임의의 32자 이상 문자열)
# openssl rand -hex 32 로 생성 가능
CLOUDFLARE_WORKER_SECRET=your-shared-secret-for-hmac-signing
